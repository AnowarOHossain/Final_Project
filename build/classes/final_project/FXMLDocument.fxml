<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="641.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="final_project.FXMLDocumentController">
    <children>
        <Label layoutX="130.0" layoutY="10.0" text="BMI Calculator" />
        
        <Label layoutX="30.0" layoutY="50.0" text="Height (m):" />
        <TextField fx:id="heightField" layoutX="130.0" layoutY="50.0" />
        
        <Label layoutX="30.0" layoutY="90.0" text="Weight (kg):" />
        <TextField fx:id="weightField" layoutX="130.0" layoutY="90.0" />
        
        <Label layoutX="30.0" layoutY="130.0" text="Age:" />
        <TextField fx:id="ageField" layoutX="130.0" layoutY="130.0" />
        
        <Label layoutX="30.0" layoutY="170.0" text="Gender:" />
        <ComboBox fx:id="genderComboBox" layoutX="130.0" layoutY="170.0" />
        
        <Button layoutX="130.0" layoutY="210.0" onAction="#calculateBMI" text="Calculate BMI" />

        <Label layoutX="30.0" layoutY="250.0" text="Your BMI:" />
        <Label fx:id="bmiValueLabel" layoutX="130.0" layoutY="250.0" />

        <Label layoutX="30.0" layoutY="290.0" text="BMI Category:" />
        <Label fx:id="bmiCategoryValueLabel" layoutX="130.0" layoutY="290.0" />

        <Label layoutX="30.0" layoutY="330.0" text="Health Tips:" />
        <Label fx:id="healthTipsLabel" layoutX="130.0" layoutY="330.0" prefWidth="200.0" wrapText="true" />

        <Label layoutX="35.0" layoutY="399.0" text="BMI History:" />
        <ListView fx:id="bmiHistoryList" layoutX="130.0" layoutY="399.0" prefHeight="120.0" prefWidth="200.0" />

        <Label layoutX="31.0" layoutY="533.0" text="Target BMI:" />
        <TextField fx:id="goalField" layoutX="130.0" layoutY="529.0" />
        
        <Button layoutX="130.0" layoutY="560.0" onAction="#setGoal" text="Set Goal" />
        <Label fx:id="goalResultLabel" layoutX="130.0" layoutY="590.0" />
    </children>
</AnchorPane>
